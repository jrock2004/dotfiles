#!/usr/bin/env bash

CURRENT_OUTPUT=$(pactl get-default-sink)

if [[ "$CURRENT_OUTPUT" == *"14_3F_A6_83_08_17"* ]]; then
  echo " XM 4"
elif [[ "$CURRENT_OUTPUT" == *"hdmi-stereo-extra1"* ]]; then
  echo " Monitor"
elif [[ "$CURRENT_OUTPUT" == *"CalDigit"* ]]; then
  echo " CalDigit"
elif [[ "$CURRENT_OUTPUT" == *"ATR2500x"* ]]; then
  echo " Mic"
else
  echo ""
fi
