#!/bin/sh

###############################################################################
# VARIABLES
###############################################################################
SPEEDTEST=$(/usr/bin/speedtest-cli --simple)
ICON_DOWNLOAD=""
ICON_UPLOAD=""

###############################################################################
# FUNCTIONS
###############################################################################
DOWNLOADSPEED=$(echo $SPEEDTEST | awk '{print $5, $6}')
UPLOADSPEED=$(echo $SPEEDTEST | awk '{print $8, $9}')

###############################################################################
# MAIN
###############################################################################
echo "$ICON_DOWNLOAD $DOWNLOADSPEED $ICON_UPLOAD $UPLOADSPEED"
